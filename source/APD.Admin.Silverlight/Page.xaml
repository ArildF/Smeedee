<UserControl xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  x:Class="APD.Admin.Silverlight.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="400">
    <StackPanel x:Name="LayoutRoot" Background="Honeydew" Height="400" Width="400" >
		<TextBlock Foreground="#FFFF6363" FontSize="26.667">Change Settings</TextBlock>
	
        <RadioButton x:Name="radioClientSettings"  Checked="radio_modeChanged" Content="I want to change my local settings" HorizontalAlignment="Left" Margin="65,37,0,0"></RadioButton> 
        <RadioButton x:Name="radioAdminSettings"  Checked="radio_modeChanged" Content="I want to change the server settings" HorizontalAlignment="Left" Margin="65,0,0,0"></RadioButton>
        <TextBlock x:Name="lblMessage" HorizontalAlignment="Center" Text="Availalbe settings" Margin="0,50,0,0"/>

        <CheckBox x:Name="chkCIPlaySound" Click="chkCIPlaySound_Click" Content="Play sound when build is broken or fixed" Margin="12,0,0,0" HorizontalAlignment="Center"></CheckBox>

        <Button x:Name="btnSave"  Click="btnSave_Click" Content="Save settings to my computer" Margin="0,10,0,0" HorizontalAlignment="Center"></Button>
    </StackPanel>
</UserControl>