	    		</Rectangle.RenderTransform>
	    	</Rectangle>
	    	<Rectangle x:Name="R3" Fill="#FFFF9D00" StrokeThickness="0" RadiusX="20" RadiusY="20" Height="100" Width="100" Margin="220,0,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
	    		<Rectangle.RenderTransform>
	    			<TransformGroup>
	    				<ScaleTransform/>
	    				<SkewTransform/>
	    				<RotateTransform/>
	    				<TranslateTransform/>
	    			</TransformGroup>
	    		</Rectangle.RenderTransform>
	    	</Rectangle>
			<Rectangle x:Name="R4" Fill="#FFFF9D00" StrokeThickness="0" RadiusX="20" RadiusY="20" Height="100" Width="100" Margin="330,0,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
	    		<Rectangle.RenderTransform>
	    			<TransformGroup>
	    				<ScaleTransform/>
	    				<SkewTransform/>
	    				<RotateTransform/>
	    				<TranslateTransform/>
	    			</TransformGroup>
	    		</Rectangle.RenderTransform>
	    	</Rectangle>
	    </Grid>
    </Controls:Viewbox>
</UserControl>