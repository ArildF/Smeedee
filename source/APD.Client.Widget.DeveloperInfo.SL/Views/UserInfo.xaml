<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:ControlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows"
	xmlns:SampleData="clr-namespace:Expression.Blend.SampleData.UserDataSource"
	xmlns:converter="clr-namespace:APD.Client.Widget.DeveloperInfo.SL.Converters"
	xmlns:APDControls="clr-namespace:APD.Client.Framework.SL.Controls;assembly=APD.Client.Framework.SL"
	x:Class="APD.Client.Widget.DeveloperInfo.SL.Views.UserInfo">

	<UserControl.Resources>
		<SampleData:UserDataSource x:Key="UserDataSource" d:IsDataSource="True"/>
		<converter:EmailToMailtoConverter x:Key="EmailToMailtoConverter" />
	</UserControl.Resources>	
	<ControlsToolkit:Viewbox>
	<StackPanel x:Name="LayoutRoot" d:DataContext="{Binding User, Mode=OneWay, Source={StaticResource UserDataSource}}">		
		<APDControls:DefaultImage ImageUrl="{Binding ImageUrl, Mode=OneWay}" MaxWidth="135" MaxHeight="200" />
		<TextBlock x:Name="Name" Text="{Binding Name, Mode=OneWay}" 
			Foreground="{StaticResource FontBrushBright}" 
			FontSize="21.333" 
			FontFamily="{StaticResource FontFamily}"
			TextWrapping="Wrap" 
			TextAlignment="Center" />
	</StackPanel>
	</ControlsToolkit:Viewbox>
</UserControl>