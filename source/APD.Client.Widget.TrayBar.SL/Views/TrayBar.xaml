<UserControl x:Class="APD.Client.Widget.TrayBar.SL.Views.TrayBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <DataTemplate 
            x:Key="ItemTemplate">
            <ContentControl 
                Content="{Binding Control}"
                Margin="0,0,7,0" />
        </DataTemplate>
        
        <ItemsPanelTemplate 
            x:Key="ItemsLayout">
            <StackPanel 
                Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </UserControl.Resources>
    
    <ItemsControl
        x:Name="LayoutRoot"
        ItemsSource="{Binding Path=ViewCollection}"
        ItemsPanel="{StaticResource ItemsLayout}"
        ItemTemplate="{StaticResource ItemTemplate}">
        <TextBlock
            Text="Tray bar placeholder text." />
    </ItemsControl>
    
</UserControl>
