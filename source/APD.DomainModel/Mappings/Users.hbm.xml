<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="APD.DomainModel"
                   namespace="APD.DomainModel.Users">
  <class name="Userdb" table="Userdb">
    <id name="Name">
      <generator class="assigned"/>
    </id>
    <bag name="Users" cascade="All" lazy="false" inverse="true">
      <key column="Userdb_fid"/>
      <one-to-many class="APD.DomainModel.Users.User, APD.DomainModel"/>
    </bag>
  </class>

  <class name="APD.DomainModel.Users.User, APD.DomainModel" table="User">
    <composite-id>
      <key-property name="Username"/>
      <key-many-to-one name="Database" class="Userdb" column="Userdb_fid" lazy="false"/>
    </composite-id>
    <property name="Email"/>
    <property name="ImageUrl"/>
    <property name="Firstname"/>
    <property name="Middlename"/>
    <property name="Surname"/>
  </class>
</hibernate-mapping>