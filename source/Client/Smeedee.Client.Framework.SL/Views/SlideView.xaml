    		<Grid.RenderTransform>
    			<CompositeTransform/>
    		</Grid.RenderTransform>
    		<Button Content="Button" Margin="0" Template="{StaticResource settingsButtonTemplate}" ToolTipService.ToolTip="Settings">
    			<i:Interaction.Triggers>
    				<i:EventTrigger EventName="Click">
    					<i:InvokeCommandAction Command="{Binding Settings}"/>
    				</i:EventTrigger>
    			</i:Interaction.Triggers>
    		</Button>
    	</Grid>
    </Grid>
