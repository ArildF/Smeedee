			<Setter.Value>
				<ControlTemplate TargetType="Charting:Chart">
					<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="0">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
							</Grid.RowDefinitions>
							<Grid Margin="0" Grid.Row="1">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="0.65*"/>
									<ColumnDefinition Width="0.35*"/>
								</Grid.ColumnDefinitions>
								<visualizationToolkit:Legend x:Name="Legend" 
                                                             Style="{TemplateBinding LegendStyle}" 
                                                             Grid.Column="0" 
                                                             Title="{TemplateBinding LegendTitle}" Margin="0" VerticalAlignment="Top"/>
								<System_Windows_Controls_DataVisualization_Charting_Primitives:EdgePanel 
                                    x:Name="ChartArea" 
                                    Style="{TemplateBinding ChartAreaStyle}"
                                    Grid.Column="1">
									<Grid Style="{TemplateBinding PlotAreaStyle}" Canvas.ZIndex="-1"/>
									<Border BorderBrush="#FF919191" BorderThickness="0" Canvas.ZIndex="10"/>
								</System_Windows_Controls_DataVisualization_Charting_Primitives:EdgePanel>
							</Grid>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
