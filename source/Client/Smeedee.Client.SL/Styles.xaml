<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    <FontFamily x:Key="FontFamily">Arial</FontFamily>

    <Color x:Key="BorderColor">#FFEBDBDB</Color>
    <Color x:Key="FontColor">#FF949494</Color>
    <Color x:Key="FontColorBright">#FFC2C2C2</Color>
    <Color x:Key="FontColorDark">#FF414141</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="FontBrush"
                     Color="#FF949494" />
    <SolidColorBrush x:Key="FontBrushBright"
                     Color="White" />
    <SolidColorBrush x:Key="FontBrushDark"
                     Color="#FF414141" />
    <SolidColorBrush x:Key="DOHIColor"
                     Color="#FFE214DB" />

    <SolidColorBrush x:Key="DialogBackground"
                     Color="#FF676A91" />
    <SolidColorBrush x:Key="DialogBackgroundBright"
                     Color="#FFDADADA" />
    <SolidColorBrush x:Key="DialogBackgroundDark"
                     Color="#7F2E2F33" />

    <LinearGradientBrush x:Key="BackgroundBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF414141"
                      Offset="0" />
        <GradientStop Color="#FF1E1E1E"
                      Offset="0.983" />
    </LinearGradientBrush>


    <RadialGradientBrush x:Key="WhiteGradientBrush"
                         GradientOrigin="-0.3,-0.3"
                         RadiusX="0.7"
                         RadiusY="0.7"
                         Center="0.2,0.2"
                         SpreadMethod="Reflect">
        <GradientStop Color="#FFF4F4F4" />
        <GradientStop Color="#FFB7B7B7"
                      Offset="0.8" />
    </RadialGradientBrush>









