    <!-- Styles -->
    <Style x:Key="DefaultBorder"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource RedGradientBrush}" />
        <Setter Property="CornerRadius"
                Value="10" />
        <Setter Property="BorderThickness"
                Value="1" />
    </Style>

</ResourceDictionary>