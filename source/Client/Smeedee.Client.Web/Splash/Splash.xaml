<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<StackPanel
    Width="500"
    Height="250"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">
  <Image Source="../Splash/logo.png"
     Height="128" Width="128"
     HorizontalAlignment="Center"  VerticalAlignment="Center"
     Margin="10" />
  <Grid>
    <Rectangle x:Name="rectBorder" Width="500" HorizontalAlignment="Left" Height="25" Stroke="Red" Opacity="0.5" StrokeThickness="1"/>
    <Rectangle x:Name="rectBar" Width="0" HorizontalAlignment="Left" Height="25">
      <Rectangle.Fill>
        <LinearGradientBrush EndPoint="0.5,1.161" StartPoint="0.5,0">
          <GradientStop Color="#FFFD9F00" Offset="0"/>
          <GradientStop Color="#FFEF3600" Offset="1"/>
        </LinearGradientBrush>
      </Rectangle.Fill>
    </Rectangle>

  </Grid>
</StackPanel>
</Grid>