    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <Grid>
                <Grid>

                <Viewbox d:LayoutOverrides="GridBox" 
                         Stretch="Fill">
                    
                    <Grid x:Name="Split_grid" 
                          HorizontalAlignment="Center" 
                          Margin="0">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"  
                              Background="#5942FF00" 
                              UseLayoutRounding="True">

                            <ItemsControl 
    					    ItemTemplate="{StaticResource NoteTemplate}" 
    					    ItemsPanel="{StaticResource Notes}" 
    					    d:LayoutOverrides="GridBox" 
						    Margin="18,60,0,10" 
						    ItemsSource="{Binding PositiveNotes}" 
						    IsTabStop="False" />

                            <Button x:Name="AddPositiveNoteButton"
						    HorizontalAlignment="Right"
						    VerticalAlignment="Bottom"
                    	    IsEnabled="{Binding CanAddPositive}"
                    	    Margin="0,0,0,10"
						    MinWidth="30"
						    MinHeight="30" 
						    Template="{StaticResource AddButton3}" 
						    Command="{Binding AddPositiveNote}" 
						    Width="49"
                            Cursor="Hand"
						    d:LayoutOverrides="HorizontalAlignment"/>
                        </Grid>


                      <Grid Grid.Column="1" 
                            Background="#59FF0000" 
                            UseLayoutRounding="True">
                          
                        <ItemsControl 
    					    ItemTemplate="{StaticResource NoteTemplate}" 
    					    ItemsPanel="{StaticResource Notes}"   
    					    d:LayoutOverrides="GridBox" 
						    Margin="18,60,0,0" 
						    ItemsSource="{Binding NegativeNotes}" />

                        <Button x:Name="AddNegativeNoteButton"
						    HorizontalAlignment="Right"
						    VerticalAlignment="Bottom" 
                            Margin="0,0,0,10" 
                            Template="{StaticResource AddButton3}" 
                            MinWidth="30" 
						    MinHeight="30" 
                            Command="{Binding AddNegativeNote}" 
                            Width="49"
                            Cursor="Hand"
                            IsEnabled="{Binding CanAddNegative}"
                            d:LayoutOverrides="HorizontalAlignment"/>
                    </Grid>
                        
                        <TextBlock
                            Grid.Column="0"
    					    Text="What worked well" 
    					    FontFamily="Calibri"
    					    FontWeight="Bold" 
    					    FontSize="30" 
    					    HorizontalAlignment="Left" 
						    VerticalAlignment="Top" 
						    Margin="8,8,0,0" />

                        <TextBlock 
                            Grid.Column="1"
    					    Text="To improve and caveats" 
    					    FontFamily="Calibri" 
    					    FontWeight="Bold"
    					    FontSize="30" 
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="8,8,0,0" 
                            d:LayoutOverrides="Width" />
                    </Grid>
                </Viewbox>
              </Grid>
           </Grid>

        <Grid Grid.Row="1">
            <Border Background="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel 
                    Grid.Column="0"
                    Grid.Row="0"
                    Style="{StaticResource SettingsViewControlButtonsWrapper}">
                        
                        <Button
                        Style="{StaticResource SettingsViewSaveButton}"
                        Command="{Binding Save}"  />
                        
                        <Button 
                        Style="{StaticResource SettingsViewReloadSettingsButton}"
                        Command="{Binding ReloadSettings}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>

</UserControl>
