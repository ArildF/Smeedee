<UserControl x:Class="Smeedee.Widgets.SL.GenericCharting.Views.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:local="clr-namespace:Smeedee.Widgets.SL.GenericCharting.Views" mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">
  

        <local:GenericChart Title="{Binding Name, Mode=OneWay}"
                            LinesSource="{Binding Lines, Mode=OneWay}"
                            ColumnsSource="{Binding Columns, Mode=OneWay}"
                            AreasSource="{Binding Areas, Mode=OneWay}">
            <charting:Chart.Axes>
                <charting:LinearAxis
                        Title="Value"
                        Foreground="White"
                        FontSize="15"
                        Orientation="Y"
                        Interval="auto"
                        VerticalAlignment="Stretch"
                        Minimum="0"
                        ShowGridLines="True"/>

                <charting:LinearAxis
                        Title="Time"
                        Foreground="White"
                        FontSize="15"
                        Orientation="X"
                        Minimum="0"
                        Interval="1"
                        HorizontalAlignment="Stretch"
                        />
            </charting:Chart.Axes>

            <local:GenericChart.AreaTemplate>
                <DataTemplate>
                    <charting:AreaSeries ItemsSource="{Binding Data}" Title="{Binding Name}" DependentValuePath="Y" IndependentValuePath="X" />
                </DataTemplate>
            </local:GenericChart.AreaTemplate>
            <local:GenericChart.ColumnTemplate>
                <DataTemplate>
                    <charting:ColumnSeries ItemsSource="{Binding Data}" Title="{Binding Name}" DependentValuePath="Y" IndependentValuePath="X" />
                </DataTemplate>
            </local:GenericChart.ColumnTemplate>
            <local:GenericChart.LineTemplate>
                <DataTemplate>
                    <charting:LineSeries ItemsSource="{Binding Data}" Title="{Binding Name}" DependentValuePath="Y" IndependentValuePath="X" />
                </DataTemplate>
            </local:GenericChart.LineTemplate>
        </local:GenericChart>

    </Grid>
</UserControl>