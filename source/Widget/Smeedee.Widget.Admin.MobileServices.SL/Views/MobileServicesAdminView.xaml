<UserControl x:Class="Smeedee.Widget.Admin.MobileServices.SL.Views.MobileServicesAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
	<Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="153*" />
            <RowDefinition Height="47*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="18" TextWrapping="Wrap"
                 Text="Use the following password to connect to Smeedee using a third party client such as Smeedee Mobile:" />

        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="32" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Text="{Binding ApiKey, Mode=OneWay}" />
        
        <Button Grid.Row="2" Grid.Column="0"
                Content="Generate new password"
                Command="{Binding GenerateNewKey}"/>
    </Grid>
</UserControl>
