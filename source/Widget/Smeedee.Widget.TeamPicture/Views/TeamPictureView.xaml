<UserControl x:Class="Smeedee.Widget.TeamPicture.Views.TeamPictureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ViewModel="clr-namespace:Smeedee.Widget.TeamPicture.ViewModel" mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <d:UserControl.DataContext>
        <ViewModel:TeamPictureViewModel/>
    </d:UserControl.DataContext>
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
    	<Border Grid.Column="0" Margin="8" BorderThickness="1" CornerRadius="4" >
    		<Image Margin="0" Source="{Binding Snapshot}"/>
    	</Border>
        <Border Grid.Column="1" CornerRadius="6" BorderBrush="White" HorizontalAlignment="Stretch" BorderThickness="2">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="White" FontSize="20" Text="{Binding Path=Message}" TextWrapping="Wrap"></TextBlock>
        </Border>
    </Grid>
</UserControl>
